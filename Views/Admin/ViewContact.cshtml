@{
    ViewBag.Title = "ViewContact";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

@using System.Data;
@using System.Data.SqlClient;
@using FitnessClub.Models;
<link href="~/Content/css/akash.css" rel="stylesheet" />
<script src="~/Content/js/akash.js"></script>
<script>
    $(document).ready(function () {
        $("#example").DataTable();
    })
</script>
<h2 class="text text-center" style="color:orange;">ViewContact</h2>
<hr />
<div class="col-sm-12">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 panel panel-body">
        @{
            string cmd = "select * from cl_contact";
            DBmanager db = new DBmanager();
            DataTable dt = db.GetAllRecords(cmd);
            if (dt.Rows.Count > 0)
            {
                <table class="table table-responsive" id="example">
                    <thead>
                        <tr>
                            <th>SN.</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Message</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < dt.Rows.Count; i++)
                        {
                            <tr>
                                <td>@dt.Rows[i]["cid"]</td>
                                <td>@dt.Rows[i]["name"]</td>
                                <td>@dt.Rows[i]["email"]</td>
                                <td>@dt.Rows[i]["mobile"]</td>
                                <td>@dt.Rows[i]["message"]</td>
                                <td>
                                    <a href="/Admin/DeleteContact?del=@dt.Rows[i]["cid"]">
                                        <span class="fa fa-trash"></span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/Admin/UpdateContact?up=@dt.Rows[i]["cid"]">
                                        <span class="fa fa-edit"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h2>No Record Found!</h2>
            }
        }
    </div>
    <div class="col-sm-2"></div>
</div>
>
