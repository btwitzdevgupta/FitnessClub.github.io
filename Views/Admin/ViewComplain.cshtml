@{
    ViewBag.Title = "ViewComplain";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
@using System.Data;
@using System.Data.SqlClient;
@using FitnessClub.Models;


<h2 class="text text-center" style="color:orange";>View Complain Panel</h2>
<hr />
<div class="col-sm-12">
    <div class="col-sm-1"></div>
    <div class="col-sm-10 panel panel-body">
        <table class="table table-responsive">
            <thead class="success">
                <tr class="info">
                    <th>ID</th>
                    <th>User</th>
                    <th>Complain</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    string cmd = "select * from fc_complain";
                    DBmanager db = new DBmanager();
                    DataTable dt = db.GetAllRecords(cmd);
                    if (dt.Rows.Count > 0)
                    {
                        for (int i = 0; i < dt.Rows.Count; i++)
                        {
                            <tr>
                                <td>@dt.Rows[i]["cid"]</td>
                                <td>@dt.Rows[i]["complain"]</td>
                                <td>@dt.Rows[i]["uid"]</td>
                                <td>@dt.Rows[i]["cdate"]</td>
                                <td>
                                    <a href="/Admin/ResponseComplain?res=@dt.Rows[i]["cid"]">
                                        <input type="submit" class="btn-info" value="Response" />
                                    </a>
                                </td>
                            </tr>
                        }
                    }

                }
            </tbody>
        </table>

    </div>
    <div class="col-sm-1"></div>
</div>
