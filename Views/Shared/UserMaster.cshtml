<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/js/bootstrap.min.js"></script>
    <style>
        .glyphicon:hover {
            color: orange;
        }

        body {
            line-height: 1.5;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            background-image: url('/Content/Images/wallpaperflare.com_wallpaper%20(16).jpg');
            color: #fff;
            display: grid;
            height: 40vh;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        .row {
            
            flex-wrap: wrap;
            display:inline;
        }

        ul {
            list-style: none;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover {
                    background-color: tomato;
                    color:black;
                }
        .fa-solid {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <!--------Code For Header--------->
    <div class="row">
    <div class="col-sm-12" style="background-color: transparent;color: white; padding: 5px">
        <div class="col-sm-4"><span class="glyphicon glyphicon-map-marker"> GetFit Gym in Pratapgarh, U.P.</span></div>
        
        <div class="col-sm-6"><span style="color:red">Welcome to UserZone!</span></div>
        
        
        <div class="col-sm-2"><a href="tel:+916392341710" class="glyphicon glyphicon-earphone" style="color:white;"><b> Phone:6392341710</b></a></div>
    </div>
</div>
    <!------End Code For Header---------->

    <!--------Code For NavBar----------->
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#" style="color:orange;font-size:30px">Get-Fit</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/User/Index">About Us</a></li>
                <li><a href="/User/Complain">Complain</a></li>
                <li><a href="/User/ViewResponse">View Response</a></li>
                <li><a href="/User/Membership">Membership</a></li>
                <li><a href="/User/Logout">Logout</a></li>
            </ul>
        </div>
    </nav>
    <!--------End Code For NavBar-------->
    <div>
        @RenderBody()
    </div>

    <!-----Code For Footer------->
    <div class="row">
        <div class="col-sm-12" style="background:black;color:white;padding:1%;text-align:center;">
            Design and Developed by Blanko
        </div>
    </div>
    <!-----End Code For Footer----------->
</body>
</html>
